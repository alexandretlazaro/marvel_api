html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Marvel API

    style.
      
      body {
        margin: 0;
      }

      #characterName {
        width: 550px;
      }
      #loadMoreButton {
        margin-bottom: 30px;
      }
      
      #comicsList .comic-item {
        padding-block: 14px;
      }
      
      #comicsList .comic-item:hover .hq-img {
        transform: scale(1.1,1.1);
        opacity: 0.3;
      }

      .comic-item:hover .card-img-overlay {
        display:flex !important;
        background-color: black !important;
        opacity: 65% !important;
        transform: scale(1.1,1) !important;
      }

    // Bootstrap CSS via CDN
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', crossorigin='anonymous')

  body
    .container.mt-5
        .container.mt-5.text-center
            h1.mb-4 Informações do personagem
        
        #characterInfo.mt-4

        #comicsList.row

        #loadMoreButton.load-more-button.text-center.mt-5
            button.btn.btn-danger Carregar Mais
        
        .container.mt-5.text-center
            a#buttonBack.btn.btn-secondary(href='/') Home Page

        script.
            document.addEventListener('DOMContentLoaded', function() {
            var loadMoreButton = document.getElementById('loadMoreButton');

            if (loadMoreButton) {
                loadMoreButton.addEventListener('click', function() {
                searchComics(true);
                });
            }
            })


    script(src='https://code.jquery.com/jquery-3.6.4.min.js', crossorigin='anonymous')
    
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js')

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js', crossorigin='anonymous')

    script(src='../script-character-info.js')