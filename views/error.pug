html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Marvel API

    script(src='https://code.jquery.com/jquery-3.6.4.min.js', crossorigin='anonymous')
    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js', crossorigin='anonymous')

    style.

        h1#ErrorTitle {
            margin-bottom: 15px;
            color: #494949;
            font-size: 1.85em;
            line-height: 1.45em;
            font-weight: 400;
        }

        p#descricao {
            margin-bottom: 10px;
            font-size: 1em;
            line-height: 1.45em;
            color: #919191;
        }

    // Bootstrap CSS via CDN
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', crossorigin='anonymous')

body

    center

        .container
            .row.align-items-center
                .justify-content-sm-center
                    .col
                        if error.status === 404
                            h2.display-2= error.status
                            h1.display-1#ErrorTitle Página não encontrada
                            p#descricao A página que você está procurando
                            p#descricao não existe ou foi alterada para outro endereço.
                            p#descricao (ou pode ter sido roubada pela HYDRA).
                        else
                            h2.display-2= error.status
                            h1.display-1#ErrorTitle Um erro aconteceu!
                            p#descricao Jarvis está trabalhando o mais rápido possível
                            p#descricao para resolver este problema
                    .col
                        if error.status === 404
                            img#imgError(src="https://multiversitystatic.s3.amazonaws.com/uploads/2019/07/Deadpool-2019-issue-15-featured-1000x700.jpg")
                        else
                            img#imgError(src="https://wallpaperaccess.com/full/561309.jpg")

